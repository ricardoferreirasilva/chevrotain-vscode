{
    "name": "chevrotain-vscode",
    "displayName": "Chevrotain for Visual Studio Code",
    "description": "An extension that provides support for chevrotain development.",
    "version": "0.1.2",
    "publisher": "gallaeciandruid",
    "license": "MIT",
    "engines": {
        "vscode": "^1.25.0"
    },
    "icon": "chevrotain.png",
    "categories": [
        "Other"
    ],
    "activationEvents": [
    ],
    "main": "./out/extension",
    "contributes": {
        "snippets": [
            {
                "language": "typescript",
                "path": "./snippets/typescript.json"
            },
            {
                "language": "javascript",
                "path": "./snippets/typescript.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "repository": {
        "url": "https://github.com/tansvanio/chevrotain-vscode"
    }
}
